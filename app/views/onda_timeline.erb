<ul>
  <% if @ondas && !@ondas.empty? %>
    <% @ondas.reverse_each do |onda| %>
      <section class="post">
      <li class="Rola">
        <a class="user_emoji" href="/users/<%= User.get(onda.user_id).username %>"><%= User.get(onda.user_id).emoji %></a>
        <a href="/users/<%= User.get(onda.user_id).username %>"><%= User.get(onda.user_id).username %></a>:
        <a href="<%= onda.link %>">Rola.</a><br />
        <iframe class="video-player" width="560" height="315" src="https://www.youtube.com/embed/<%= (onda.link.slice(32..-1)) %>" frameborder="0" allowfullscreen></iframe>
        Song: <%= onda.song %>
        Artist: <%= onda.artist %>
        Message: <%= onda.message %>
        <ul class="tag-container"><% onda.tags.each do |tag|%><li class="tags"><a class="tag-text" href="/onda/<%= tag.name %>"><%= tag.name %></a></li>
        <% end %></ul>
        Posted: <%= onda.time.strftime("at %I:%M%p on %e/%m/%y") %>
      </li>
      </section>
    <% end %>
  <% end %>
</ul>
